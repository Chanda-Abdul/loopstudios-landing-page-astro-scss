---
import '../styles/global.scss';

---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/assets/favicon-32x32.png" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/assets/fonts/Alata/Alata-Regular.ttf" as="font" type="font/truetype" crossorigin />
<link rel="preload" href="/assets/fonts/Josefin_Sans/JosefinSans-VariableFont_wght.ttf" as="font" type="font/truetype" crossorigin />


<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
