---
import { creations } from '../consts';
import ResponsiveImage from './ResponsiveImage.astro';
---

<section class='creations'>
  <h2>Our creations</h2>

  <ul class='creations__list'>
    {
      creations.map((creation) => (
        <li class='creations__list--item'>
          <ResponsiveImage
            alt={creation.creation}
            mobileImgUrl={creation.image.mobile}
            desktopImgUrl={creation.image.desktop}
          />
          <a href={creation.linkTo}>
            <h3>{creation.creation}</h3>
          </a>
        </li>
      ))
    }
  </ul>

  <a href='/creations' class=" btn btn-link">See all</a>
</section>

<style lang='scss'>
  .creations {
    &__list {
      display: flex;
      flex-direction: column;
      gap: 2.4rem;
      margin-top: var(--spacing-m);
      &--item {
         height:12rem;
        position: relative;
        a {background: linear-gradient(180deg, rgba(0, 0, 0, 0.00) 0%, rgba(0, 0, 0, 0.60) 100%);
       
          color: white;
          z-index: 3;
          position: absolute;
          top: 0;
          left: 0;
          height: 100%;
        width: 100%;
          display: flex;
          flex-direction: column;
          align-items: flex-start;
          justify-content: flex-end;
          text-align: left;
          h3 {
            max-width: 14rem;
            margin: auto auto 2rem 2rem;
          }
        }
      }
    }
  
  }
</style>
